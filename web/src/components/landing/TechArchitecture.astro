---
import Tilt3D from "../ui/Tilt3D.astro";
import { Thermometer, Cpu, Cloud, LayoutDashboard } from "lucide-react";
---

<section
    id="technology"
    class="py-20 border-y border-white/5 bg-slate-900/30 relative z-10 backdrop-blur-sm"
>
    <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-3xl font-bold text-white mb-4">How It Works</h2>
            <p class="text-slate-400 max-w-2xl mx-auto">
                Secure end-to-end monitoring architecture designed for privacy
                and reliability.
            </p>
        </div>

        <div
            class="flex flex-col md:flex-row items-center justify-between gap-8 relative"
        >
            <!-- Connecting Line (Desktop) -->
            <div
                class="hidden md:block absolute top-1/2 left-0 w-full h-0.5 bg-gradient-to-r from-transparent via-brand-primary/30 to-transparent -translate-y-1/2 z-0"
            >
            </div>

            <!-- Step 1: Sensor -->
            <Tilt3D class="w-full md:w-1/4">
                <div class="glass-panel p-6 text-center h-full group">
                    <div
                        class="w-16 h-16 mx-auto bg-sensor-wired/10 rounded-full flex items-center justify-center mb-4 text-sensor-wired transform transition-transform duration-500 group-hover:translate-z-20 group-hover:scale-110"
                    >
                        <Thermometer className="w-8 h-8" />
                    </div>
                    <h3
                        class="text-lg font-bold text-white mb-2 transform transition-transform duration-500 group-hover:translate-z-10"
                    >
                        Smart Sensors
                    </h3>
                    <p
                        class="text-slate-400 text-sm transform transition-transform duration-500 group-hover:translate-z-10"
                    >
                        Industrial grade probes measure Temp + Door status every
                        15 mins.
                    </p>
                </div>
            </Tilt3D>

            <!-- Step 2: Edge -->
            <Tilt3D class="w-full md:w-1/4">
                <div class="glass-panel p-6 text-center h-full group">
                    <div
                        class="w-16 h-16 mx-auto bg-brand-secondary/10 rounded-full flex items-center justify-center mb-4 text-brand-secondary transform transition-transform duration-500 group-hover:translate-z-20 group-hover:scale-110"
                    >
                        <Cpu className="w-8 h-8" />
                    </div>
                    <h3
                        class="text-lg font-bold text-white mb-2 transform transition-transform duration-500 group-hover:translate-z-10"
                    >
                        Edge Processing
                    </h3>
                    <p
                        class="text-slate-400 text-sm transform transition-transform duration-500 group-hover:translate-z-10"
                    >
                        SmartController handles logic, buffers data, and
                        encrypts transmission.
                    </p>
                </div>
            </Tilt3D>

            <!-- Step 3: Cloud -->
            <Tilt3D class="w-full md:w-1/4">
                <div class="glass-panel p-6 text-center h-full group">
                    <div
                        class="w-16 h-16 mx-auto bg-status-info/10 rounded-full flex items-center justify-center mb-4 text-status-info transform transition-transform duration-500 group-hover:translate-z-20 group-hover:scale-110"
                    >
                        <Cloud className="w-8 h-8" />
                    </div>
                    <h3
                        class="text-lg font-bold text-white mb-2 transform transition-transform duration-500 group-hover:translate-z-10"
                    >
                        Secure Cloud
                    </h3>
                    <p
                        class="text-slate-400 text-sm transform transition-transform duration-500 group-hover:translate-z-10"
                    >
                        Data stored in redundant, secure servers with automated
                        backups.
                    </p>
                </div>
            </Tilt3D>

            <!-- Step 4: Dashboard -->
            <Tilt3D class="w-full md:w-1/4">
                <div class="glass-panel p-6 text-center h-full group">
                    <div
                        class="w-16 h-16 mx-auto bg-status-success/10 rounded-full flex items-center justify-center mb-4 text-status-success transform transition-transform duration-500 group-hover:translate-z-20 group-hover:scale-110"
                    >
                        <LayoutDashboard className="w-8 h-8" />
                    </div>
                    <h3
                        class="text-lg font-bold text-white mb-2 transform transition-transform duration-500 group-hover:translate-z-10"
                    >
                        Live Dashboard
                    </h3>
                    <p
                        class="text-slate-400 text-sm transform transition-transform duration-500 group-hover:translate-z-10"
                    >
                        Access real-time insights and alerts from any device,
                        anywhere.
                    </p>
                </div>
            </Tilt3D>
        </div>
    </div>
</section>
