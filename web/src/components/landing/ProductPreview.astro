<div class="relative group perspective-[1200px] w-full max-w-5xl mx-auto mt-16">
    <!-- Glow Effect via CSS -->
    <div
        class="absolute -inset-1 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-xl blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"
    >
    </div>

    <!-- 3D Container -->
    <div
        class="relative rounded-xl bg-slate-900 border border-slate-800 shadow-2xl transform transition-transform duration-700 hover:scale-[1.02] hover:-rotate-1 rotate-x-6 transform-style-3d"
    >
        <!-- Mockup Header -->
        <div
            class="h-10 border-b border-slate-800 bg-slate-900/50 backdrop-blur rounded-t-xl flex items-center px-4 space-x-2"
        >
            <div
                class="w-3 h-3 rounded-full bg-red-500/20 border border-red-500/50"
            >
            </div>
            <div
                class="w-3 h-3 rounded-full bg-yellow-500/20 border border-yellow-500/50"
            >
            </div>
            <div
                class="w-3 h-3 rounded-full bg-green-500/20 border border-green-500/50"
            >
            </div>
            <div class="ml-4 flex-1">
                <div
                    class="h-4 w-64 bg-slate-800 rounded-md text-[10px] text-slate-500 flex items-center px-2 font-mono"
                >
                    dashboard.smartcool.iot
                </div>
            </div>
        </div>

        <!-- Mockup Content (Abstract representation of dashboard) -->
        <div
            class="p-6 grid grid-cols-1 md:grid-cols-3 gap-6 bg-slate-950/80 backdrop-blur-sm min-h-[400px]"
        >
            <!-- Sidebar -->
            <div
                class="hidden md:block col-span-1 space-y-4 border-r border-slate-800/50 pr-6"
            >
                <div class="h-8 w-3/4 bg-slate-800/50 rounded animate-pulse">
                </div>
                <div class="space-y-2 pt-4">
                    <div class="h-4 w-full bg-slate-800/30 rounded"></div>
                    <div class="h-4 w-5/6 bg-slate-800/30 rounded"></div>
                    <div class="h-4 w-4/6 bg-slate-800/30 rounded"></div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-span-2 space-y-6">
                <div class="flex justify-between">
                    <div class="h-8 w-1/3 bg-slate-800/50 rounded"></div>
                    <div class="h-8 w-8 bg-indigo-500/20 rounded-full"></div>
                </div>

                <!-- Stats Grid -->
                <div class="grid grid-cols-2 gap-4">
                    <div
                        class="p-4 rounded-lg bg-slate-800/20 border border-slate-700/50"
                    >
                        <div class="h-4 w-12 bg-slate-700/50 rounded mb-2">
                        </div>
                        <div class="h-8 w-16 bg-indigo-500/20 rounded"></div>
                    </div>
                    <div
                        class="p-4 rounded-lg bg-slate-800/20 border border-slate-700/50"
                    >
                        <div class="h-4 w-12 bg-slate-700/50 rounded mb-2">
                        </div>
                        <div class="h-8 w-16 bg-green-500/20 rounded"></div>
                    </div>
                </div>

                <!-- Chart Area -->
                <div
                    class="h-48 rounded-lg bg-gradient-to-t from-indigo-500/5 via-transparent to-transparent border border-slate-700/30 relative overflow-hidden"
                >
                    <div
                        class="absolute bottom-0 left-0 right-0 h-1 bg-indigo-500/20"
                    >
                    </div>
                    <!-- Abstract Chart Line -->
                    <svg
                        class="absolute bottom-0 left-0 w-full h-24 stroke-indigo-500/40 fill-none"
                        viewBox="0 0 100 20"
                        preserveAspectRatio="none"
                    >
                        <path
                            d="M0 15 Q 10 5 20 12 T 40 10 T 60 14 T 80 8 T 100 12"
                            vector-effect="non-scaling-stroke"
                            stroke-width="2"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Overlay Reflection -->
        <div
            class="absolute inset-0 bg-gradient-to-tr from-white/5 to-transparent rounded-xl pointer-events-none"
        >
        </div>
    </div>
</div>
