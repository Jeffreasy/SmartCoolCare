---
import Tilt3D from "../ui/Tilt3D.astro";
import { Activity, Bell, ClipboardCheck } from "lucide-react";

const features = [
    {
        title: "Real-time Monitoring",
        description:
            "Live temperature data from all your refrigeration units in one unified dashboard.",
        Icon: Activity,
    },
    {
        title: "Intelligent Alerts",
        description:
            "Get notified instantly via Email or Push when temperatures drift out of safe zones.",
        Icon: Bell,
    },
    {
        title: "HACCP Compliance",
        description:
            "Automated logging and reporting ensures you never miss a compliance check again.",
        Icon: ClipboardCheck,
    },
];
---

<section id="features" class="py-24 relative z-10">
    <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
            <h2
                class="text-3xl md:text-5xl font-bold bg-gradient-to-r from-white to-slate-400 bg-clip-text text-transparent mb-4"
            >
                Why Choose SmartCool?
            </h2>
            <p class="text-slate-400 text-lg max-w-2xl mx-auto">
                Built for reliability, designed for ease of use.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                features.map((feature) => (
                    <Tilt3D>
                        <div class="glass-panel p-6 md:p-8 transition-all duration-300 hover:bg-slate-800/60 group border-white/5 hover:border-brand-primary/30 h-full">
                            <div class="w-14 h-14 bg-brand-primary/20 rounded-2xl flex items-center justify-center mb-6 text-brand-primary transform transition-transform duration-500 group-hover:scale-110 group-hover:translate-z-20">
                                <feature.Icon className="w-8 h-8" />
                            </div>
                            <h3 class="text-xl font-bold text-white mb-3 transform transition-transform duration-500 group-hover:translate-z-10">
                                {feature.title}
                            </h3>
                            <p class="text-slate-400 leading-relaxed transform transition-transform duration-500 group-hover:translate-z-10">
                                {feature.description}
                            </p>
                        </div>
                    </Tilt3D>
                ))
            }
        </div>
    </div>
</section>
