---
import Tilt3D from "../ui/Tilt3D.astro";
const features = [
    {
        title: "Real-time Monitoring",
        description:
            "Live temperature data from all your refrigeration units in one unified dashboard.",
        icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
    },
    {
        title: "Intelligent Alerts",
        description:
            "Get notified instantly via Email or Push when temperatures drift out of safe zones.",
        icon: "M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9",
    },
    {
        title: "HACCP Compliance",
        description:
            "Automated logging and reporting ensures you never miss a compliance check again.",
        icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
    },
];
---

<section id="features" class="py-24 relative z-10">
    <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
            <h2
                class="text-3xl md:text-5xl font-bold bg-gradient-to-r from-white to-slate-400 bg-clip-text text-transparent mb-4"
            >
                Why Choose SmartCool?
            </h2>
            <p class="text-slate-400 text-lg max-w-2xl mx-auto">
                Built for reliability, designed for ease of use.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                features.map((feature) => (
                    <Tilt3D>
                        <div class="glass-panel p-6 md:p-8 transition-all duration-300 hover:bg-slate-800/60 group border-white/5 hover:border-indigo-500/30 h-full">
                            <div class="w-14 h-14 bg-indigo-500/20 rounded-2xl flex items-center justify-center mb-6 text-indigo-400 transform transition-transform duration-500 group-hover:scale-110 group-hover:translate-z-20">
                                <svg
                                    class="w-8 h-8"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d={feature.icon}
                                    />
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-white mb-3 transform transition-transform duration-500 group-hover:translate-z-10">
                                {feature.title}
                            </h3>
                            <p class="text-slate-400 leading-relaxed transform transition-transform duration-500 group-hover:translate-z-10">
                                {feature.description}
                            </p>
                        </div>
                    </Tilt3D>
                ))
            }
        </div>
    </div>
</section>
