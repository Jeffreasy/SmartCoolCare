---
import Layout from "../layouts/Layout.astro";
import LoginPageIsland from "../components/auth/LoginPageIsland.tsx";
import BackgroundOrbs from "../components/ui/BackgroundOrbs.astro";
---

<Layout title="Log In - KoelkastProject">
    <div
        class="min-h-screen flex items-center justify-center p-4 bg-slate-950 relative overflow-hidden"
    >
        <!-- Background Orbs -->
        <BackgroundOrbs />

        <div
            class="w-full max-w-md relative z-10 animate-in fade-in zoom-in-95 duration-300"
        >
            <div class="glass-panel p-8 md:p-10 border-white/10 bg-white/5">
                <div class="text-center mb-8">
                    <h1
                        class="text-3xl font-bold bg-gradient-to-r from-white to-slate-400 bg-clip-text text-transparent mb-2"
                    >
                        Welcome Back
                    </h1>
                    <p class="text-slate-400">Log in to your IoT dashboard</p>
                </div>
                <LoginPageIsland client:only="react" />
            </div>
        </div>
    </div>
</Layout>
