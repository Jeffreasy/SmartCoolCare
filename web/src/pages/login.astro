---
import Layout from "../layouts/Layout.astro";
import LoginPageIsland from "../components/auth/LoginPageIsland.tsx";
import BackgroundOrbs from "../components/ui/BackgroundOrbs.astro";
---

<Layout title="Log In - KoelkastProject" disableNavbarAuth={true}>
    <style is:global>
        /* AGGRESSIVE Clerk input overrides - Force dark theme */
        .cl-formFieldInput,
        .cl-formFieldInput input,
        .cl-internal-b3fm6y input,
        input[data-clerk-el="input"],
        input[type="email"],
        input[type="password"],
        input[type="text"] {
            background-color: rgba(2, 6, 23, 0.5) !important;
            border: 1px solid rgba(255, 255, 255, 0.1) !important;
            color: #e2e8f0 !important;
        }

        /* Force all Clerk containers to be transparent */
        .cl-internal-b3fm6y,
        .cl-card,
        .cl-rootBox,
        .cl-main,
        .cl-footer,
        .cl-footerPages {
            background: transparent !important;
            background-color: transparent !important;
            box-shadow: none !important;
        }
    </style>

    <div
        class="min-h-screen flex items-center justify-center p-4 bg-slate-950 relative overflow-hidden"
    >
        <!-- Background Orbs -->
        <BackgroundOrbs />

        <div
            class="w-full max-w-2xl relative z-10 animate-in fade-in zoom-in-95 duration-300"
        >
            <div class="glass-panel p-6 md:p-8">
                <div class="text-center mb-6">
                    <h1
                        class="text-2xl font-bold bg-gradient-to-r from-white to-slate-400 bg-clip-text text-transparent mb-2"
                    >
                        Welcome Back
                    </h1>
                    <p class="text-slate-400 text-sm">
                        Log in to your IoT dashboard
                    </p>
                </div>
                <LoginPageIsland client:only="react" />
            </div>
        </div>
    </div>
</Layout>
