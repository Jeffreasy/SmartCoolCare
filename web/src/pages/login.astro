---
import Layout from "../layouts/Layout.astro";
import LoginPageIsland from "../components/auth/LoginPageIsland.tsx";
import BackgroundOrbs from "../components/ui/BackgroundOrbs.astro";
---

<Layout title="Log In - KoelkastProject" disableNavbarAuth={true}>
    <style is:global>
        /* AGGRESSIVE Clerk input overrides - Force dark theme */
    </style>

    <div
        class="min-h-screen flex items-center justify-center p-4 bg-background relative overflow-hidden"
    >
        <!-- Background Orbs -->
        <BackgroundOrbs />

        <div
            class="w-full max-w-2xl relative z-10 animate-in fade-in zoom-in-95 duration-300"
        >
            <LoginPageIsland client:only="react" />
        </div>
    </div>
</Layout>
