---
import Layout from "../layouts/Layout.astro";
import BackgroundOrbs from "../components/ui/BackgroundOrbs.astro";
import HeroSection from "../components/landing/HeroSection.astro";
import ProblemSolution from "../components/landing/ProblemSolution.astro";
import FeatureSection from "../components/landing/FeatureSection.astro";
import TechArchitecture from "../components/landing/TechArchitecture.astro";
import PricingTiers from "../components/landing/PricingTiers.astro";
import Footer from "../components/landing/Footer.astro";
---

<Layout title="SmartCool - Next Gen IoT Monitoring">
    <main
        class="min-h-screen bg-slate-950 relative overflow-hidden selection:bg-indigo-500/30"
    >
        <!-- Shared Background (Consistent with Login) -->
        <BackgroundOrbs />

        <!-- Navigation Placeholder (Simple) -->
        <nav
            class="absolute top-0 w-full z-50 px-6 py-6 fade-in slide-in-from-top-4 duration-1000"
        >
            <div class="max-w-7xl mx-auto flex justify-between items-center">
                <div class="font-bold text-2xl tracking-tighter text-white">
                    Smart<span class="text-indigo-400">Cool</span>
                </div>
                <div class="flex gap-4">
                    <a
                        href="/login"
                        class="text-slate-300 hover:text-white font-medium transition-colors text-sm"
                    >
                        Log In
                    </a>
                    <a
                        href="#pricing"
                        class="hidden md:block px-4 py-2 rounded-lg bg-white/10 hover:bg-white/20 text-white text-sm font-medium transition-colors border border-white/10 backdrop-blur-sm"
                    >
                        Get Started
                    </a>
                </div>
            </div>
        </nav>

        <!-- Components Sequence -->
        <HeroSection />
        <ProblemSolution />
        <TechArchitecture />
        <FeatureSection />
        <PricingTiers />

        <Footer />
    </main>
</Layout>
