---
import Layout from "../layouts/Layout.astro";
import SignupPageIsland from "../components/auth/SignupPageIsland.tsx";
import BackgroundOrbs from "../components/ui/BackgroundOrbs.astro";
---

<Layout title="Sign Up - KoelkastProject">
    <div
        class="min-h-screen flex items-center justify-center p-4 bg-background relative overflow-hidden"
    >
        <!-- Background Orbs -->
        <BackgroundOrbs />

        <div
            class="w-full max-w-2xl relative z-10 animate-in fade-in zoom-in-95 duration-300"
        >
            <div class="glass-panel p-8 md:p-10 border-border bg-card">
                <div class="text-center mb-8">
                    <h1
                        class="text-3xl font-bold bg-gradient-to-r from-foreground to-muted-foreground bg-clip-text text-transparent mb-2"
                    >
                        Create Account
                    </h1>
                    <p class="text-muted-foreground">
                        Join the SmartCool revolution
                    </p>
                </div>
                <SignupPageIsland client:only="react" />
            </div>
        </div>
    </div>
</Layout>
