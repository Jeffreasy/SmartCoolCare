---
import Layout from "../../layouts/Layout.astro";
import DeviceDetailPageIsland from "../../components/devices/DeviceDetailPageIsland";

const { deviceId } = Astro.params;

if (!deviceId) {
    return Astro.redirect("/dashboard");
}
---

<Layout title="Device Details" hideNavbar={true}>
    <DeviceDetailPageIsland client:only="react" deviceId={deviceId} />
</Layout>
